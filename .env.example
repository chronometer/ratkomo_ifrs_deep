# LLM Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
DEFAULT_LLM_MODEL=anthropic/claude-3-opus
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# LangWatch Configuration
LANGWATCH_API_KEY=your_langwatch_api_key_here
LANGWATCH_PROJECT_ID=ifrs-analysis
LANGWATCH_ENVIRONMENT=development

# Application Configuration
DEBUG=true
LOG_LEVEL=DEBUG
MAX_DOCUMENT_SIZE=10000000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Document Storage
DOCUMENT_STORAGE_PATH=./storage/documents
REPORT_STORAGE_PATH=./storage/reports

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
